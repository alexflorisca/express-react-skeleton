{
  "name": "alexflorisca.co.uk",
  "description": "A skeleton for an express app with a react front-end",
  "author": "Alex Florisca",
  "version": "0.1.0",
  "main": "server/app.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:alexflorisca/express-react-skeleton.git"
  },
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "start:dev": "node server/app.js & npm run dev",
    "dev": "parcel watch client/index.html",
    "build": "rm -rf ./dist && parcel build client/index.html"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "eslint": "^6.5.1",
    "express": "^4.17.1",
    "morgan": "^1.9.1",
    "parcel-bundler": "^1.12.4",
    "pm2": "^4.1.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "babel-preset-react-app": "^9.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "engines": {
    "node": "12.4.0"
  }
}
